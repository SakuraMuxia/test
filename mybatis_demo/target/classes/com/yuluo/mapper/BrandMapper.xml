<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

    <!--名称空间-->
<mapper namespace="com.yuluo.mapper.BrandMapper">
    
    <!--statement
    没有提示sql数据库名称的话，设置sql方言
    -->
    <!--sql片段-->
    <!--
    <sql id="brand_column">
         id , brand_name, company_name as companyName, ordered, description, status
    </sql>
    <select id="selectAll" resultType="brand">
        select
        <include refid="brand_column"/>
        from tb_brand;
    </select>
    -->

    <!--ResultMap-->
    <resultMap id="brandResultMap" type="brand">
        <!--column：列的名称，Properties：属性的名称-->
        <result column="company_name" property="companyName"/>

    </resultMap>



    <select id="selectAll" resultMap="brandResultMap">
        select
        id , brand_name, company_name, ordered, description, status
        from tb_brand;
    </select>

</mapper>